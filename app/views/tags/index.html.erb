<div class="container-fluid">
	<h1>All Tags</h1>

	<table class="table table-striped table-bordered">
		<thead>
			<tr>
				<th scope="col">Tag ID</th>
				<th scope="col">Tag Name</th>
				<th scope="col"></th>
				<th scope="col">Show</th>
				<th scope="col">Edit</th>
				<th scope="col">Delete</th>
			</tr>
		</thead>

		<tbody>
			<% @tags.each do |tag| %>
			<tr>
				<td scope="row"><%= tag.id %></td>
				<td><%= tag.tag_name %></td>
				<td></td>
				<td><%= link_to 'Show', tag_path(tag), class: "btn btn-info" %></td>
				<td><%= link_to 'Edit', edit_tag_path(tag), class: "btn btn-success" %></td>
				<td><%= link_to 'Delete', tag_path(tag), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
			</tr>
			<% end %>
		</tbody>
	</table>

	<p><%= link_to 'Add a new tag', new_tag_path, class: "btn btn-success" %></p>
</div>