<%= form_with(model: [@project, @screenshot], local: true) do |form| %>
	<div class="form-group">
		<%= form.label :title %>
		<%= form.text_field :title, class: "form-control" %>
	</div>

	<div class="form-group">
		<%= form.label :image %>
		<%= form.file_field :image, class: "form-control-file" %>
	</div>
	
	<div>
		<%= form.submit 'Create Screenshot', class: "btn btn-success" %>
	</div>

<% end %>