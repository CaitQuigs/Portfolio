<div class="container-fluid">
	<h1 class="project title">Some of My Work</h1>

	<!--  Project cards with Modal button. Modal will have a carousel of screenshots from project -->
	<div class="d-flex flex-row justify-content-center flex-wrap">
		<% @projects.each do |proj| %>
			<div class="project-box">
				<%= image_tag proj.thumbnail, class: "project-thumbnail" %>
				<p class="project name"><%= proj.name %></p>
				
				<!-- Button trigger for modal -->
				<%= link_to 'Learn More', "project-#{proj.id}Modal", data: { toggle: "modal", target: "#project-#{proj.id}Modal" }, class: "btn btn-info" %>

 				<% if current_user && current_user.admin %>
					<%= link_to 'Show', project_path(proj), class: "btn btn-info" %>
					<%= link_to 'Edit', edit_project_path(proj), class: "btn btn-success" %>
					<%= link_to 'Delete', project_path(proj), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
				<% end %>
			</div>
		<% end %>
	</div>
			
	<% if current_user && current_user.admin %>
		<%= link_to 'New Project', new_project_path, class: "btn btn-success" %>
	<% end %>
</div>

<!-- Partial Call for Modal -->
<%= render partial: 'project_modal' %>
