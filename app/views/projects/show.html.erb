<div class="container">
	<h1 class="title">Project Details</h1>
	<h2><%= @project.id %> - <%= @project.name %></h2>
	<p>Description: <%= @project.description %></p>
	<p>Technology Stack: <%= @project.tech_stack %></p> 
	<p>Deployment Location: <%= link_to_unless(@project.deployment.nil?, 'See it here', @project.deployment, class: "project-link") %></p>
	
	<div class="screenshots-gallery">
	<!-- Screenshot Carousel -->
	<%= carousel_for(@project.carousel_urls) %>
	</div>

	<div>
	<%= link_to 'Add or Edit Screenshots', project_screenshots_path(@project), class: "btn btn-info" %>
	</div>

	<div class="btn-group">
		<%= link_to 'Edit', edit_project_path(@project), class: "btn btn-info" %>
		<%= link_to 'Back', projects_path, class: "btn btn-info" %>
	</div>
</div>