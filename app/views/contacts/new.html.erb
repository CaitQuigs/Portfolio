<div class="container">
	<h1>Contact Me</h1>
	<%= form_with model: @contact, local: true, class: "contact-form" do |form| %>

		<div class="form-group">
			<div>
				<%= form.label :name %>
				<%= form.text_field :name, class: "form-control" %>
			</div>
			<div class="form-group">
				<%= form.label :company %>
				<%= form.text_field :company, class: "form-control" %>
			</div>
			<div class="form-group">
				<%= form.label :email %>
				<%= form.email_field :email, class: "form-control" %>
			</div>
			<div class="form-group">
				<%= form.label :phone %>
				<%= form.telephone_field :phone, class: "form-control" %>
			</div>
			<div class="form-group">
				<p>How do you prefer to be contacted?</p>
				<p><%= form.radio_button :method_of_contact, "email", class: "form-check form-check-inline" %>Email    <%= form.radio_button :method_of_contact, "phone", class: "form-check form-check-inline" %>Phone</p>
			</div>
			<div class="form-group">
				<p>Please pick the industry which best represents your company:</p>
				<p><%= form.select :industry, options_for_select(@industries), { include_blank: false }, { class: "custom-select" } %> </p>
			</div>
			<div class="form-group">
				<%= form.label :work_description %>
				<%= form.text_area :work_description, class: "form-control" %>
			</div>
			<p>
				<%= form.submit %>
			</p>
		</div>
	<% end %>
</div>