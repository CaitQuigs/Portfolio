<div class="container-fluid">
	<h1>Contacts List</h1>

	<table class="table table-striped table-bordered">
		<thead>
			<tr>
				<th scope="col">ID</th>
				<th scope="col">Name</th>
				<th scope="col">Company</th>
				<th scope="col">Industry</th>
				<th scope="col">Email</th>
				<th scope="col">Phone</th>
				<th scope="col">Preferred Method of Contact</th>
				<th scope="col">Work Description</th>
				<th scope="col">Contact Log</th>
				<th scope="col">Update Log</th>
				<th scope="col">Delete</th>
			</tr>
		</thead>

		<tbody>
			<% @contacts.each do |contact| %>
			<tr>
				<td scope="row"><%= contact.id %></td>
				<td><%= contact.name %></td>
				<td><%= contact.company %></td>
				<td><%= contact.industry %></td>
				<td><%= contact.email %></td>
				<td><%= contact.phone %></td>
				<td><%= contact.method_of_contact %></td>
				<td><%= contact.work_description %></td>
				<td><%= contact.contact_log %></td>
				<td><%= contact.update_log %></td>
				<td><%= link_to 'Delete', contact_path(contact), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
			</tr>
			<% end %>
		</tbody>
	</table>

	<%= link_to 'Add a New Contact', contact_path, class: "btn btn-info" %>
</div>